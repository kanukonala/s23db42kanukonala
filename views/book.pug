extends layout

block content
  h1= title
  <br>
   - let Create = `dispatch(\"/book/create\")`
   button.btn( class="btn-primary ml-1", onclick= Create) Create
  - let items = results;
  div(class="container-fluid")
    div(class="row")
      each item,index in items
        - let destination = `dispatch(\"/book/update?id=${item._id}\")`
        div(class="col-sm-2" class="m-1")
          h3 #{item.book_name}
          p #{item.year_published}
          p #{item.author}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
          br
          button.btn( class="btn-primary ml-1", onclick= detail) Details
          br
          button.btn( class="btn-primary ml-1", onclick= Delete) Delete
  script.
    function dispatch(path){
      console.log(path);
      window.location.href=path;
    }